version: '3.8'

services:
  n8n:
    image: n8nio/n8n:latest
    container_name: life-tracker-n8n
    restart: unless-stopped
    ports:
      - "5678:5678"
    environment:
      # Configurações básicas
      - N8N_HOST=0.0.0.0
      - N8N_PORT=5678
      - N8N_PROTOCOL=http
      - NODE_ENV=production
      
      # Configurações de banco de dados
      - DB_TYPE=postgresdb
      - DB_POSTGRESDB_HOST=postgres
      - DB_POSTGRESDB_PORT=5432
      - DB_POSTGRESDB_DATABASE=n8n
      - DB_POSTGRESDB_USER=n8n
      - DB_POSTGRESDB_PASSWORD=gMVw9zKUcgLeShZ2Yi4zyw==
      
      # Configurações de webhook
      - WEBHOOK_URL=https://seu-dominio.com/webhook
      - N8N_EDITOR_BASE_URL=https://seu-dominio.com
      
      # Configurações de segurança
      - N8N_ENCRYPTION_KEY=sua-chave-de-criptografia-super-secreta-32-chars
      - N8N_USER_MANAGEMENT_DISABLED=false
      - N8N_BASIC_AUTH_ACTIVE=true
      - N8N_BASIC_AUTH_USER=admin
      - N8N_BASIC_AUTH_PASSWORD=admin123
      
      # Configurações de execução
      - EXECUTIONS_PROCESS=main
      - EXECUTIONS_MODE=queue
      - QUEUE_BULL_REDIS_HOST=redis
      - QUEUE_BULL_REDIS_PORT=6379
      - QUEUE_BULL_REDIS_PASSWORD=nUTZDqeFntV0mZWlvbsIOQ==
      
      # Configurações de logging
      - N8N_LOG_LEVEL=info
      - N8N_LOG_OUTPUT=console,file
      - N8N_LOG_FILE_LOCATION=/home/node/.n8n/logs
      
      # Configurações de MongoDB para os workflows
      - MONGODB_URL=mongodb://mongo:27017/life_tracker
      - MONGODB_USERNAME=life_tracker_user
      - MONGODB_PASSWORD=life_tracker_password
      
    volumes:
      - n8n_data:/home/node/.n8n
      - ./workflows:/workflows:ro
      - ./logs:/home/node/.n8n/logs
    depends_on:
      - postgres
      - redis
      - mongo
    networks:
      - life-tracker-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:5678/healthz"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

  postgres:
    image: postgres:15-alpine
    container_name: life-tracker-postgres
    restart: unless-stopped
    environment:
      - POSTGRES_DB=n8n
      - POSTGRES_USER=n8n
      - POSTGRES_PASSWORD=gMVw9zKUcgLeShZ2Yi4zyw==
      - POSTGRES_INITDB_ARGS=--encoding=UTF-8 --lc-collate=C --lc-ctype=C
    volumes:
      - postgres_data:/var/lib/postgresql/data
      - ./init-scripts:/docker-entrypoint-initdb.d:ro
    networks:
      - life-tracker-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U n8n -d n8n"]
      interval: 10s
      timeout: 5s
      retries: 5

  redis:
    image: redis:7-alpine
    container_name: life-tracker-redis
    restart: unless-stopped
    command: redis-server --requirepass nUTZDqeFntV0mZWlvbsIOQ== --appendonly yes
    volumes:
      - redis_data:/data
    networks:
      - life-tracker-network
    healthcheck:
      test: ["CMD", "redis-cli", "--raw", "incr", "ping"]
      interval: 10s
      timeout: 3s
      retries: 5

  mongo:
    image: mongo:7
    container_name: life-tracker-mongo
    restart: unless-stopped
    environment:
      - MONGO_INITDB_ROOT_USERNAME=admin
      - MONGO_INITDB_ROOT_PASSWORD=k6TyJKEnPWwHlNPxbtiz4Q==
      - MONGO_INITDB_DATABASE=life_tracker
    volumes:
      - mongo_data:/data/db
      - ./mongo-init:/docker-entrypoint-initdb.d:ro
    networks:
      - life-tracker-network
    healthcheck:
      test: ["CMD", "mongosh", "--eval", "db.adminCommand('ping')"]
      interval: 10s
      timeout: 10s
      retries: 5

  # Worker para processar filas
  n8n-worker:
    image: n8nio/n8n:latest
    container_name: life-tracker-n8n-worker
    restart: unless-stopped
    environment:
      - NODE_ENV=production
      - EXECUTIONS_PROCESS=main
      - EXECUTIONS_MODE=queue
      - QUEUE_BULL_REDIS_HOST=redis
      - QUEUE_BULL_REDIS_PORT=6379
      - QUEUE_BULL_REDIS_PASSWORD=nUTZDqeFntV0mZWlvbsIOQ==
      - DB_TYPE=postgresdb
      - DB_POSTGRESDB_HOST=postgres
      - DB_POSTGRESDB_PORT=5432
      - DB_POSTGRESDB_DATABASE=n8n
      - DB_POSTGRESDB_USER=n8n
      - DB_POSTGRESDB_PASSWORD=gMVw9zKUcgLeShZ2Yi4zyw==
      - MONGODB_URL=mongodb://mongo:27017/life_tracker
      - MONGODB_USERNAME=life_tracker_user
      - MONGODB_PASSWORD=life_tracker_password
    volumes:
      - n8n_data:/home/node/.n8n
    depends_on:
      - postgres
      - redis
      - mongo
    networks:
      - life-tracker-network

  # Nginx para proxy reverso
  nginx:
    image: nginx:alpine
    container_name: life-tracker-nginx
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./nginx/ssl:/etc/nginx/ssl:ro
      - ./logs/nginx:/var/log/nginx
    depends_on:
      - n8n
    networks:
      - life-tracker-network

  # Monitoramento com Prometheus
  prometheus:
    image: prom/prometheus:latest
    container_name: life-tracker-prometheus
    restart: unless-stopped
    ports:
      - "9090:9090"
    volumes:
      - ./monitoring/prometheus.yml:/etc/prometheus/prometheus.yml:ro
      - prometheus_data:/prometheus
    command:
      - '--config.file=/etc/prometheus/prometheus.yml'
      - '--storage.tsdb.path=/prometheus'
      - '--web.console.libraries=/etc/prometheus/console_libraries'
      - '--web.console.templates=/etc/prometheus/consoles'
      - '--storage.tsdb.retention.time=200h'
      - '--web.enable-lifecycle'
    networks:
      - life-tracker-network

  # Grafana para dashboards
  grafana:
    image: grafana/grafana:latest
    container_name: life-tracker-grafana
    restart: unless-stopped
    ports:
      - "3000:3000"
    environment:
      - GF_SECURITY_ADMIN_PASSWORD=admin123
      - GF_USERS_ALLOW_SIGN_UP=false
    volumes:
      - grafana_data:/var/lib/grafana
      - ./monitoring/grafana/dashboards:/etc/grafana/provisioning/dashboards:ro
      - ./monitoring/grafana/datasources:/etc/grafana/provisioning/datasources:ro
    depends_on:
      - prometheus
    networks:
      - life-tracker-network

volumes:
  n8n_data:
    driver: local
  postgres_data:
    driver: local
  redis_data:
    driver: local
  mongo_data:
    driver: local
  prometheus_data:
    driver: local
  grafana_data:
    driver: local

networks:
  life-tracker-network:
    driver: bridge
    ipam:
      config:
        - subnet: 172.20.0.0/16
