{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "echo 'Running custom build command'",
      "rootDirectory": "/nodejs/apis",
      "watchPaths": ["src/**", "package.json"]
    },
    "deploy": {
      "startCommand": "node dist/index.js",
      "preDeployCommand": ["npm install", "npm run migrate"],
      "healthcheckPath": "/healthz",
      "healthcheckTimeout": 300,
      "restartPolicyType": "on-failure",
      "multiRegionConfig": {
        "us-west2": {
          "numReplicas": 2
        }
      }
    }
  }